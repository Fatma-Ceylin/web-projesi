@{
    ViewBag.Title = "Home";
}

<section class="feature-section my-5">
    <div class="row align-items-center feature-row">

        
        <div class="col-md-7">
            <h3 class="section-title mb-2">Minimal Turkey Exploration</h3>
            <p class="section-text">
                Discover some of Turkey's unique, historical, cultural cities.
            </p>
            <a class="btn btn-outline-primary mt-3"
               asp-controller="City"
               asp-action="Index">
                Start Exploring
            </a>
        </div>

        
        <div class="col-md-5 d-flex justify-content-center">
            <img src="~/img/istanbul.jpg"
                 alt="Scenic view"
                 class="section-img" />
        </div>

    </div>
</section>


<!-- Second block: food -->
<section class="feature-section my-5">
    <div class="row align-items-center feature-row">
        
        <div class="col-md-5 d-flex justify-content-center">
            <img src="~/img/kebap.jpg"
                 alt="Culinary tour"
                 class="section-img" />
        </div>

        
        <div class="col-md-7">
            <h3 class="section-title mb-2">Discover Local Flavors</h3>
            <p class="section-text">
                From savory kebabs and mezes to sweet baklava — see where and when you can
                taste local dishes in different cities.
            </p>
            <a class="btn btn-outline-primary mt-3"
               asp-controller="Event"
               asp-action="Index">
                See Food Events
            </a>
        </div>
    </div>
</section>

<!-- Third block: culture / heritage -->
<section class="feature-section my-5">
    <div class="row align-items-center feature-row">
        
        <div class="col-md-7">
            <h3 class="section-title mb-2">Explore Culture & Heritage</h3>
            <p class="section-text">
                Visit ancient ruins, museums and vibrant neighborhoods. TravelApp helps you
                quickly see what each city offers culturally.
            </p>
            <a class="btn btn-outline-primary mt-3"
               asp-controller="Event"
               asp-action="Index">
                Book a Tour
            </a>
        </div>

        
        <div class="col-md-5 d-flex justify-content-center">
            <img src="~/img/right2.jpeg"
                 alt="Architecture"
                 class="section-img" />
        </div>
    </div>
</section>

