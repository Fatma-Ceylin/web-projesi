@model List<travelapp.Models.Event>

<h2>Events</h2>

<a class="btn btn-primary mb-3" href="/Event/Create">Add Event</a>

<table class="table table-bordered">
    <tr>
        <th>Name</th>
        <th>City</th>
        <th>Date</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.City</td>
            <td>@item.Date.ToShortDateString()</td>
            <td>
                <a class="btn btn-info btn-sm" href="/Event/Details/@item.Id">Details</a>
                <a class="btn btn-warning btn-sm" href="/Event/Edit/@item.Id">Edit</a>
                <a class="btn btn-danger btn-sm" href="/Event/Delete/@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>
