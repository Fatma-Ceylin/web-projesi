@model List<travelapp.Models.Event>

<h2>Events</h2>

@if (User.IsInRole("Admin"))
{
    <a class="btn btn-primary mb-3" asp-action="Create">Add Event</a>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>City</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.City?.name</td>

                <td>@item.Date.ToShortDateString()</td>

                <td>

                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-success btn-sm" asp-controller="Booking" asp-action="Create" asp-route-eventId="@item.Id"> Booking a Tour </a>

                    @if (User.IsInRole("Admin"))
                    {
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>

                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>