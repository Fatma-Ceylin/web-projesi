@model List<travelapp.Models.Place>

<h2>Places</h2>

<a class="btn btn-primary mb-3" asp-action="Create">Add Place</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>City Id</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Description</td>
                <td>@p.CityId</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@p.PlaceId">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@p.PlaceId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
