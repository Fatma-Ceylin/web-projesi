@model travelapp.Models.Feedback

@{
    var placeName = ViewData["PlaceName"];
    ViewData["Title"] = $"Add Feedback to {placeName}";
}

<h2>Add Feedback to @placeName</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-controller="Feedback" asp-action="Create" method="post">
            
            <input type="hidden" asp-for="PlaceId" /> 
            
            <div class="mb-3">
                <label asp-for="UserName" class="form-label"></label>
                <input asp-for="UserName" class="form-control" readonly="@(Model.UserName != "Anonymous" && User.Identity.IsAuthenticated)" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Comment" class="form-label"></label>
                <textarea asp-for="Comment" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Submit Feedback</button>
            
            <a asp-controller="Feedback" asp-action="All" asp-route-placeId="@Model.PlaceId" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}