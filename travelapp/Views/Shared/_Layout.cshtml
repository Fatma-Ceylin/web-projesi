@using Microsoft.AspNetCore.Identity
@using travelapp.Models
@inject UserManager<AppUser> UserManager

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Explore Turkey</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark navbar-banner">
        <div class="container">
            <a class="navbar-brand fs-3 fw-bold text-white" href="/">Explore Turkey</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navMenu">
                <ul class="navbar-nav">

                    <li class="nav-item">
                        <a class="nav-link text-white fs-5" href="/">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-white fs-5" asp-controller="Event" asp-action="Index">Events</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-white fs-5" href="/City">Cities</a>
                    </li>

                    <li class="nav-item">
                       <a class="nav-link text-white fs-5" asp-controller="Home" asp-action="About">About</a>
                    </li>

                    
@if (User?.Identity != null && User.Identity.IsAuthenticated)
{
    var currentUser = await UserManager.GetUserAsync(User);

    <li class="nav-item">
        <span class="nav-link text-warning">
            Hello, @(currentUser?.FirstName ?? "User")!
        </span>
    </li>

    <li class="nav-item">
        <a class="nav-link text-danger" asp-controller="Account" asp-action="Logout">Logout</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-controller="Account" asp-action="Login">Login</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-white" asp-controller="Account" asp-action="Register">Register</a>
    </li>
}

                </ul>
            </div>
        </div>
    </nav>

    
    <div class="panorama-strip">
        <div class="panorama-overlay container">
            <h1 class="panorama-title">Discover Türkiye — From Istanbul to Antalya</h1>
        </div>
    </div>

    <main role="main" class="pb-5">
        <div class="container mt-4">
            @RenderBody()
        </div>
    </main>

    <footer class="text-center py-4">
        <small>&copy; @DateTime.Now.Year Explore Turkey — Discover culture, food & tours.</small>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
