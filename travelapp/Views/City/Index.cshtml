@model List<travelapp.Models.City>

<h2>Cities</h2>

@if (User.IsInRole("Admin"))
{
    <a class="btn btn-primary mb-3" asp-action="Create">Add City</a>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Plate Code</th>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.plateCode</td>
                <td>@item.name</td>
                <td>@item.Description</td>

                <td>
                    <!-- Everyone can see Details -->
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">
                        Details
                    </a>

                    <!-- Only ADMIN sees Edit/Delete -->
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">
                            Edit
                        </a>

                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">
                            Delete
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
