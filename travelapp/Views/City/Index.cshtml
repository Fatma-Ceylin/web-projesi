@model List<travelapp.Models.City>

<style>
    .img-size {
        width: 100%;
        height: 250px;
        object-fit: cover;
        border-radius: 8px;
    }
</style>

<h2 class="mb-4">Cities</h2>

@if (User.IsInRole("Admin"))
{
    <a class="btn btn-primary mb-3" asp-action="Create">Add City</a>
}

<div class="row">
    @foreach (var city in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">

                    @if (!string.IsNullOrEmpty(city.ImageUrl))
                    {
                        <img src="@city.ImageUrl" class="img-size img-fluid" />
                    }
                    else
                    {
                        <img src="/img/default-city.jpg" class="img-size img-fluid" />
                    }

                    <h5 class="card-title mt-3">@city.name</h5>

                    <p><strong>Plate Code:</strong> @city.plateCode</p>

                    @if (!string.IsNullOrEmpty(city.Description))
                    {
                        <p>@city.Description</p>
                    }

                    <a class="btn btn-info btn-sm mb-2" asp-action="Details" asp-route-id="@city.Id">
                        Details
                    </a>

                    @if (User.IsInRole("Admin"))
                    {
                        <div class="mt-2 d-flex justify-content-center">
                            <a class="btn btn-warning btn-sm mx-1" asp-action="Edit" asp-route-id="@city.Id">
                                Edit
                            </a>

                            <a class="btn btn-danger btn-sm mx-1" asp-action="Delete" asp-route-id="@city.Id">
                                Delete
                            </a>
                        </div>
                    }

                </div>
            </div>
        </div>
    }
</div>