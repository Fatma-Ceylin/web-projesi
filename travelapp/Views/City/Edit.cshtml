@model travelapp.Models.City

<h2>Edit City</h2>

<form asp-action="Edit" method="post" novalidate>

    <input type="hidden" asp-for="Id" />

    <!-- Tüm validation hataları -->
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="plateCode" class="form-label"></label>
        <input asp-for="plateCode" type="number" class="form-control" />
        <span asp-validation-for="plateCode" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="name" class="form-label"></label>
        <input asp-for="name" class="form-control" />
        <span asp-validation-for="name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImageUrl" class="form-label"></label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-warning">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
